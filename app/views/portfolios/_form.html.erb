
<%= form_for(@portfolio_item) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: 'form-control' %>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
          Upload main image <%= form.file_field :main_image, style: 'display:none;' %>
        </label>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
          Upload thumb image <%= form.file_field :thumb_image, style: 'display:none;' %>
        </label>
      </div>
    </div>
  
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control', rows: 10 %>
      </div>
    </div>
  </div>

  <h2>Technologies Used</h2>
  <div class="col-md-12">
    <%= form.fields_for :technologies do |tech_form| %>
      <div class="form-group">
        <%= tech_form.label :name %>
        <%= tech_form.text_field :name, class: 'form-control' %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit 'Save Portfolio Item', class: 'btn btn-primary' %>
  </div>
<% end %>