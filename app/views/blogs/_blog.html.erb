<div class="blog-post">
  <h2 class="blog-post-title"><%= link_to blog.title, blog %></h2>
    <p class="blog-post-meta">Published <%= distance_of_time_in_words(blog.created_at, Time.now)%> Ago</p>
    
    <% if logged_in?(:site_admin) %>
      <p class="blog-post-meta">
        <%= link_to blog.status, toggle_status_blog_path(blog) %> /
        <%= link_to 'Edit', edit_blog_path(blog) if logged_in?(:admin, :customer) %> /
        <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:admin) %>
        <%= link_to 'New Blog', new_blog_path if logged_in?(:admin) %>
      </p>
    <% end %>

    <p>
      <%= blog.body %>
    </p>

</div> 
